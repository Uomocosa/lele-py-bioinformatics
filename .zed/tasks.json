[
    // I run this directly after done the ssh login: (I didnt like creating a task for this)
    // Setup:
    // cd $HOME; git clone https://github.com/Uomocosa/lele-py-bioinformatics
    // cd $HOME/lele-py-bioinformatics; uv run -p .venv pytest
    // To train the models:
    // cd $HOME/lele-py-bioinformatics; git fetch origin; git reset --hard origin/main; chmod +x setup.sh; ./setup.sh; chmod +x ssh_cacca_train.sh; ./ssh_cacca_train.sh
    // cd $HOME/lele-py-bioinformatics; git fetch origin; git reset --hard origin/main; chmod +x setup.sh; ./setup.sh; chmod +x ssh_psmile_train.sh; ./ssh_psmile_train.sh
    // ... The others are VERY similar
    {
        "label": "run",
        "command": "uv run -p .venv pytest -rFP -q -s $ZED_RELATIVE_FILE -o \"addopts=\"",
        "env": { "LOGURU_LEVEL": "DEBUG" },
        "use_new_terminal": false,
        "allow_concurrent_runs": false,
        "reveal": "always",
        "hide": "never",
        "shell": "system",
        "show_summary": false,
        "show_command": true
    },
    {
        "label": "RUN_ALL_TESTS",
        "command": "uv run -p .venv pytest --durations=10",
        "env": { "LOGURU_LEVEL": "CRITICAL" },
        "use_new_terminal": false,
        "allow_concurrent_runs": false,
        "reveal": "always",
        "hide": "never",
        "shell": "system",
        "show_summary": false,
        "show_command": false
    },
    {
        "label": "list_tests",
        "command": "uv run -p .venv pytest --collect-only -q",
        "env": { "LOGURU_LEVEL": "CRITICAL" },
        "use_new_terminal": false,
        "allow_concurrent_runs": false,
        "reveal": "always",
        "hide": "never",
        "shell": "system",
        "show_summary": false,
        "show_command": false
    },
    // {
